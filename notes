wordpress

- curl https://raw.githubusercontent.com/wp-cli/builds/gh-pages/phar/wp-cli.phar -o /usr/bin/wp-cli.phar
- chmod +x /usr/bin/wp-cli.phar

- su -s /bin/bash www-data
- wp-cli.phar --force core download --path=/usr/share/wordpress
- wp-cli.phar --skip-check config create --path=/usr/share/wordpress --force --dbname=wp_db --dbuser=wp_user --dbpass=strong_password --dbhost=mariadb --dbcharset=utf8mb4 --dbcollate=utf8mb4_general_ci
- wp-cli.phar core install --url=mde-arpe.42.fr --title=miaumiau --admin_user=migue --admin_password=strong_password --admin_email=mde-arpe@student.42madrid.com

- cp /usr/share/wordpress/wp-config-sample.php /usr/share/wordpress/wp-config.php 
- /usr/share/wordpress/wp-config.php
  - define( 'DB_NAME', 'wp_db' ); 
  - define( 'DB_USER', 'wp_user' );
  - define( 'DB_PASSWORD', 'strong_password' );                                  
  - define( 'DB_HOST', 'mariadb' );
  - define( 'DB_CHARSET', 'utf8mb4' );                                                
  - define( 'DB_COLLATE', 'utf8mb4_general_ci' ); 



maria

- /etc/mysql/mariadb.cnf
  - enabled port=3306, commented the other option

- /etc/mysql/mariadb.conf.d/50-server.cnf
  - under [mysqld], skip-networking=0, skip-bind-address, commented bind-address=127.0.0.1